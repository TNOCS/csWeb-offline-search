    "files": [
        "./Helpers/Feature.ts",
        "./Helpers/IGroup.ts",
        "./Helpers/ILayer.ts",
        "./Helpers/IProject.ts",
        "./Helpers/IProjectLocation.ts",
        "./Helpers/ISolution.ts",
        "./Helpers/Utils.ts",
        "./IOfflineSearchOptions.ts",
        "./OfflineSearchResult.ts",
        "./OfflineSearcher.ts",
        "./OfflineSearchManager.ts",
        "./Scripts/typings/node/node.d.ts",
        "./test.ts"
    ]
}
