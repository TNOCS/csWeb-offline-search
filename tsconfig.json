{
    "version": "1.7.3",
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": false,
        "preserveConstEnums": true,
        "noLib": false,
        "outDir": "dist",
        "sourceMap": false
    }, 
    "filesGlob": [
        "./**/*.ts",
